<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <!-- Enable access to Logback component vi JMX -->
    <jmxConfigurator/>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{"yyyy-MM-dd'T'HH:mm:ss,SSS'Z'", UTC} [%thread] %-5level %logger{36} -
                %msg %n
            </pattern>
        </encoder>
    </appender>

    <appender name="all" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${CATAPA_LOG}/all.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${CATAPA_LOG}/archieve/all.%d{yyyy-MM-dd}.old.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%date{"yyyy-MM-dd'T'HH:mm:ss,SSSXXX", UTC} %-5level %logger{35} - %msg %n
            </pattern>
        </encoder>
    </appender>

    <appender name="app" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${CATAPA_LOG}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${CATAPA_LOG}/archieve/app.%d{yyyy-MM-dd}.old.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%date{"yyyy-MM-dd'T'HH:mm:ss,SSSXXX", UTC} %-5level %logger{35} - %msg %n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.catapa" level="INFO" additivity="false">
        <appender-ref ref="app"/>
    </logger>

    <logger name="org.springframework.amqp.rabbit.listener.SimpleMessageListenerContainer"
            level="ERROR" additivity="false">
        <appender-ref ref="console"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="all"/>
        <appender-ref ref="console"/>
    </root>
</configuration>